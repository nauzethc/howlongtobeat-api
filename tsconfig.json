{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2015", "DOM"],
    "rootDir": "lib",
    "resolveJsonModule": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}